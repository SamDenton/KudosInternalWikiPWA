@inherits LayoutComponentBase

<div class="page">

    <div class="sidebar">
        <div class="ps-3 navbar">
            <div class="container-fluid">
                <h4 class=".kudosText">
                    Kudos <small class="text-muted">Internal Wiki</small>
                </h4>
            </div>
        </div>
        <div class="sidebar overflow-auto" style="height: calc(100vh - 56px);">
            <NavMenu />
        </div>
    </div>

    <main class="bg-dark text-light">
        <div class="top-row px-4 auth bg-dark text-light">
            <LoginDisplay />
            <a href="https://www.kudos-software.co.uk" target="_blank">Our Website</a>
        </div>

        <article class="content px-2 bg-dark text-light">
            @Body
        </article>
    </main>
</div>
